# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
API_KEY=your-secret-api-key-here

# CORS Configuration
CORS_ORIGIN=*

# Data Configuration
DATA_FILE_PATH=./data/campaigns.json

# Base URL for exports (set this to your Railway domain in production)
BASE_URL=http://localhost:3000

# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=0.0.0.0
MCP_PATH=/mcp
MCP_AUTH_ENABLED=true
MCP_JWT_SECRET=your-mcp-jwt-secret-here
MCP_TOKEN_EXPIRY=24h

# MCP Client Configuration
MCP_ALLOWED_CLIENTS=claude,chatgpt,cursor,vscode,continue
MCP_CORS_ORIGIN=https://claude.ai,https://chat.openai.com,https://cursor.sh

# MCP Rate Limiting
MCP_RATE_LIMIT_WINDOW=900000
MCP_RATE_LIMIT_MAX=100
